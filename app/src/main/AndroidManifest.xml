<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alpha.spentwise">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".dataManager.UserProjectDataHolder"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_custom_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpentWise">
        <activity android:name=".activities.NotesActivity"></activity>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectContactActivity" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity android:name=".activities.AnalyticsActivity" />
        <activity android:name=".activities.ProjectImageActivity" />
        <activity android:name=".activities.SelectCurrencyActivity" />
        <activity
            android:name=".activities.AddUpdateProject"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.ManageProjectActivity" />
        <activity android:name=".activities.RegisterUserActivity" />
        <activity android:name=".activities.LoginPageActivity"></activity>
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".activities.EntryRepeatPatternActivity" />
        <activity android:name=".activities.EntryFilterActivity" />
        <activity android:name=".activities.SearchEntryActivity" />
        <activity android:name=".activities.CategoryManageActivity" />
        <activity android:name=".activities.CategoryImagesActivity" />
        <activity android:name=".activities.SelectCategoryActivity" />
        <activity
            android:name=".activities.ManageEntryActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.MainActivity"></activity>

        <receiver android:name=".utils.AlarmReceiver" />
    </application>

</manifest>