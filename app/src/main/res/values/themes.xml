<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.SpentWise" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/layout_color_level_0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/layout_color_level_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--  Options menu background      -->
        <item name="android:itemBackground">@color/layout_color_level_2</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/MyTheme</item>

    </style>
    <style name="MyTheme" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/util_navbar_more</item>
    </style>

    <style name="TextViewThemeCenterBlackBold">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="TextViewThemeCenterBlack">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="TextViewThemeLeftBlackBold">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewThemeLeftBlack">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="TextViewThemeLeft">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textColor">@color/app_primary_color</item>
    </style>

    <style name="MyCardViewTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="LayoutTheme_level_0">
        <item name="android:background">@color/layout_color_level_0</item>
    </style>

    <style name="LayoutTheme_level_1">
        <item name="android:background">@color/layout_color_level_1</item>
    </style>
    <style name="LayoutTheme_level_2">
        <item name="android:background">@color/layout_color_level_2</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:background">@drawable/util_textbox_background_type_2_enabled</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/edittext_text_color_selector</item>
        <item name="android:background">@drawable/util_textbox_2_selector</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="MyTextInputLayoutTheme">
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">@color/app_primary_color</item>
    </style>

    <style name="MyImageButtonTheme">
        <item name="android:backgroundTint">@color/app_primary_color</item>
    </style>

    <style name="MyImageViewTheme">
        <item name="android:tint">@color/app_primary_color</item>
    </style>

    <style name="MyTabLayoutTheme">
        <item name="android:background">@color/app_primary_color</item>
        <item name="tabIndicatorColor">@color/layout_color_level_2</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabSelectedTextColor">@color/layout_color_level_2</item>
        <item name="tabTextColor">@color/layout_color_level_2</item>
    </style>

    <style name="HelpQuestionTextViewThemeLeftBlack">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="HelpAnswerTextViewThemeLeftBlack">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>