<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/utilHelp_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/utilHelp_cardView"
        style="@style/MyCardViewTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/utilHelp_layout_1"
            style="@style/LayoutTheme_level_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/utilHelp_hgl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="10dp" />

            <TextView
                android:id="@+id/utilHelp_tv_title"
                style="@style/HelpQuestionTextViewThemeLeftBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/placeHolder"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_down_24"
                app:layout_constraintEnd_toStartOf="@+id/utilHelp_vgl_2"
                app:layout_constraintStart_toStartOf="@+id/utilHelp_vgl_1"
                app:layout_constraintTop_toTopOf="@+id/utilHelp_hgl_1" />

            <TextView
                android:id="@+id/utilHelp_tv_answer"
                style="@style/HelpAnswerTextViewThemeLeftBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/placeHolder"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/utilHelp_vgl_2"
                app:layout_constraintStart_toStartOf="@+id/utilHelp_vgl_1"
                app:layout_constraintTop_toBottomOf="@+id/utilHelp_tv_title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/utilHelp_vgl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/utilHelp_vgl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>